{
  "name": "hc-lisp",
  "version": "1.0.0",
  "description": "HC-Lisp: A Lisp dialect inspired by Clojure, written in TypeScript",
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/.bin/ts-node repl.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:legacy": "./node_modules/.bin/ts-node tests/run-all-tests.ts",
    "test:basic-legacy": "./node_modules/.bin/ts-node tests/basic-tests.ts",
    "test:advanced-legacy": "./node_modules/.bin/ts-node tests/advanced-tests.ts",
    "test:hc": "./node_modules/.bin/ts-node -e \"require('./tests/run-all-tests.ts')\"",
    "test:verify": "./node_modules/.bin/ts-node tests/verification-summary.ts",
    "run-hc": "./node_modules/.bin/ts-node hc-runner.ts"
  },
  "author": "Hector Cardoso",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^14.0.13",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.49",
    "tslint": "^6.1.2",
    "typescript": "^4.9.5"
  }
}
