{
  "name": "hc-lisp",
  "version": "1.4.0",
  "description": "A modern Lisp dialect implementation in TypeScript, inspired by Clojure and Peter Norvig's Lispy project.",
  "main": "dist/hc-lisp.js",
  "types": "dist/hc-lisp.d.ts",
  "bin": {
    "hc-lisp": "dist/cli.js",
    "hclisp": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "lisp",
    "clojure",
    "interpreter",
    "functional-programming",
    "repl",
    "typescript",
    "nodejs",
    "programming-language",
    "compiler",
    "scripting"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:watch": "tsc --project tsconfig.build.json --watch",
    "prebuild": "rimraf dist",
    "prepublishOnly": "npm run build && npm run quality",
    "postbuild": "echo '#!/usr/bin/env node' | cat - dist/cli.js > temp && mv temp dist/cli.js && chmod +x dist/cli.js",
    "start": "ts-node src/repl.ts",
    "dev": "ts-node-dev --respawn --transpile-only src/repl.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "hclisp": "ts-node src/hc-runner.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint && npm run type-check && npm test",
    "quality:fix": "npm run lint:fix && npm run type-check && npm test",
    "ci": "npm run quality && npm run test:coverage",
    "sonarcloud:setup": "./setup-sonarcloud.sh",
    "sonarcloud:verify": "./setup-sonarcloud.sh --verify",
    "sonarcloud:test": "./setup-sonarcloud.sh --test",
    "coverage:sonar": "npm test -- --coverage --coverageReporters=lcov --coverageReporters=text",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "pack": "npm pack",
    "publish:dry": "npm publish --dry-run"
  },
  "author": "Hector Cardoso",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HectorIFC/hc-lisp.git"
  },
  "bugs": {
    "url": "https://github.com/HectorIFC/hc-lisp/issues"
  },
  "homepage": "https://github.com/HectorIFC/hc-lisp#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-comments": "^1.1.10",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^14.0.0"
  }
}
