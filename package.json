{
  "name": "hc-lisp",
  "version": "0.0.0",
  "description": "HC-Lisp: A Lisp dialect.",
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/.bin/ts-node repl.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "hclisp": "./node_modules/.bin/ts-node hc-runner.ts",
    "lint": "tslint --project . --format verbose",
    "lint:fix": "tslint --project . --format verbose --fix",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint && npm run type-check && npm test",
    "quality:fix": "npm run lint:fix && npm run type-check && npm test",
    "ci": "npm run quality && npm run test:coverage",
    "sonarcloud:setup": "./setup-sonarcloud.sh",
    "sonarcloud:verify": "./setup-sonarcloud.sh --verify",
    "sonarcloud:test": "./setup-sonarcloud.sh --test",
    "coverage:sonar": "npm test -- --coverage --coverageReporters=lcov --coverageReporters=text"
  },
  "author": "Hector Cardoso",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^14.0.13",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.49",
    "tslint": "^6.1.2",
    "typescript": "^4.9.5"
  }
}
